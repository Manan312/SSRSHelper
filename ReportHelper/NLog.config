<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Warn"
      internalLogFile="logs/_internal_nlog.txt">

  <targets>
    <!-- MAIN LOG FILE -->
    <target xsi:type="File"
            name="mainFile"
            fileName="logs/SSRSUploader.log"
            layout="${longdate} | ${level:uppercase=true} | ${message} ${exception:format=ToString,StackTrace}"
            archiveFileName="logs/archives/SSRSUploader.{#}.log"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveEvery="Day"
            createDirs="true"
            encoding="utf-8" />

    <!-- FAILED REPORTS LOG -->
    <target xsi:type="File"
            name="failedFile"
            fileName="logs/FailedReports.log"
            layout="${longdate} | ${message}"
            archiveFileName="logs/archives/FailedReports.{#}.log"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveEvery="Day"
            createDirs="true"
            encoding="utf-8" />

    <!-- OPTIONAL: Console log (for dev) -->
    <target xsi:type="Console"
            name="console"
            layout="${longdate} | ${level:uppercase=true} | ${message}" />
  </targets>

  <rules>
    <!-- All general logs go to mainFile and console -->
    <logger name="*" minlevel="Info" writeTo="mainFile,console" />

    <!-- Failed reports log -->
    <logger name="FailedReport" minlevel="Info" writeTo="failedFile" />
  </rules>
</nlog>
